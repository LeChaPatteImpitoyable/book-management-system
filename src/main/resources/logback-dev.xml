<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    
    <!-- console appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">   
    	<encoder>   
      		<pattern>%d-[w2-book] %p %t %c - %m%n</pattern>
    	</encoder>
    </appender>
    
    <!-- output file appender -->
	<appender name="common"  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- path need to specified at deploy shell  -->
		<file>/home/ying/dev/book_tomcat/logs/w2-book.log</file>
        <!--<file>D:\logs\w2-book.log</file>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--<FileNamePattern>D:\logs\w2-book.log.%d{yyyy-MM-dd}</FileNamePattern>-->
            <FileNamePattern>/home/ying/dev/book_tomcat/logs/w2-book.log.%d{yyyy-MM-dd}</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"> 
            <pattern>%d-[w2-book] %p %t %c - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="java.sql.Connection" level="DEBUG"/>
    <logger name="java.sql.Statement" level="DEBUG"/>
    <logger name="java.sql.PreparedStatement" level="DEBUG"/>

	<!-- root -->
    <root level="INFO">
    	<appender-ref ref="STDOUT" />
    	<appender-ref ref="common" />
 	</root>
</configuration>
